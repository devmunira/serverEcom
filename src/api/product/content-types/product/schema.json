{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "sale_price": {
      "type": "integer"
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "short_des": {
      "type": "richtext",
      "required": true
    },
    "sku": {
      "type": "string"
    },
    "table": {
      "type": "json"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category_id": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "products"
    },
    "variation": {
      "type": "enumeration",
      "enum": [
        "e-book",
        "hard-copy"
      ],
      "default": "hard-copy",
      "required": true
    },
    "reviews_id": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "label": {
      "type": "enumeration",
      "enum": [
        "Featured",
        "Sale",
        "New",
        "Best Selling",
        "None"
      ],
      "default": "None"
    }
  }
}
